<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="loginViewModel"
            type="pe.edu.upc.wallpapeer.viewmodels.LoginViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0EFF2"
        tools:context=".views.ProjectListActivity">

        <TextView
            android:id="@+id/tvProjectUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="@={loginViewModel.username}"
            android:textColor="#767BBF"
            android:textSize="42sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tvHola"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:text="Hola, "
            android:textColor="#767BBF"
            android:textSize="42sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <TextView
            android:id="@+id/tvDescriptionProjectList"
            android:layout_width="272dp"
            android:layout_height="49sp"
            android:text="Estos son los proyectos que tiene disponibles"
            android:textColor="#767BBF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.155" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilboxProjectList1"
            android:layout_width="305dp"
            android:layout_height="195dp"
            android:background="@drawable/menu_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.333">

            <TextView
                android:id="@+id/tilPLTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="185dp"
                android:text="Últ. Edición: 22/03"
                android:textColor="#737373"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tilPLTextView2"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Proyecto 1"
                android:textColor="#767BBF"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/tilPLImageView1"
                android:layout_width="265dp"
                android:layout_height="137dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/project_image" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilboxProjectList2"
            android:layout_width="305dp"
            android:layout_height="195dp"
            android:background="@drawable/menu_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tilboxProjectList1"
            app:layout_constraintVertical_bias="0.179">

            <TextView
                android:id="@+id/tilPLTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="185dp"
                android:text="Últ. Edición: 22/03"
                android:textColor="#737373"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tilPLTextView4"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Proyecto 2"
                android:textColor="#767BBF"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/tilPLImageView2"
                android:layout_width="265dp"
                android:layout_height="137dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/project_image" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>